if ($#ARGV < 1) {
    &fail("Usage: nesdoc <documentation directory> <options and nesC files>");
}

$docdir = shift @ARGV;

unshift @ARGV, "-docdir=$docdir";
unshift @ARGV, "-fsyntax-only";
unshift @ARGV, "ncc";

exec @ARGV;
print STDERR "Couldn't execute ncc\n";
exit 2;

sub fail {
    print STDERR "$_[0]\n";
    exit 2;
}

