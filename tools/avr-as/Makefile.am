AUTOMAKE_OPTIONS = foreign

ncclibdir=$(libdir)/ncc

noinst_DATA = as$(EXEEXT)

as$(EXEEXT): make-avr-as
	perl make-avr-as $(EXEEXT)

install-exec-local: as$(EXEEXT)
	mkdir -p $(ncclibdir)/avr/`avr-gcc -dumpversion`
	install as$(EXEEXT) $(ncclibdir)/avr/`avr-gcc -dumpversion`/as

EXTRA_DIST =					\
	gas-2.11.2-avr-dollar-patch.tar.bz2 	\
	gas-2.13.2.1-avr-dollar-patch.tar.bz2	\
	make-avr-as.in				\
	install-avr-as.in
