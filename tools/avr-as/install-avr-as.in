# Install a patched version of avr-as that matches the current compiler

$ncclibdir = $ARGV[0];

open GCCV, "avr-gcc 2>&1 -v |";

while (<GCCV>) {
  $version = $1 if (/^gcc version ([0-9.]+)/);
  $noavrgcc = 1 if /command not found/;
}
if ($noavrgcc) {
    print "avr-gcc not found, not installing special avr-as\n";
    print "(if you are using avr-based motes, you will need to\n";
    print "reinstall nesC after installing avr-gcc)\n";
    exit 0;
}
die "Could not determine avr-gcc version" if !defined($version);

die "Could not install AVR assembler" if
  (system("mkdir -p $ncclibdir/avr/$version")
   || system("install as $ncclibdir/avr/$version/as"));

