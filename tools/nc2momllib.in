# Configuration
$prefix = "@prefix@";
$exec_prefix = "@exec_prefix@";
$NCDIR = "@libdir@/ncc";

$PTINYOS_COMPONENT = "ptolemy.domains.nc.lib.NCComponent";

if ($#ARGV < 1) {
    &fail("Usage: nc2momllib <output directory> <input directory for nesC files> <options>");
}

$outputdir = shift @ARGV;
$inputdir = shift @ARGV;

unshift @ARGV, "-I$inputdir";
push @ARGV, "$inputdir";

unshift @ARGV, "-fmoml-ptinyos-component=$PTINYOS_COMPONENT";
unshift @ARGV, "-fmomldir=$outputdir";
unshift @ARGV, "-fmomllib";
#unshift @ARGV, "-fsyntax-only";
unshift @ARGV, "$exec_prefix/bin/ncc";

exec @ARGV;
print STDERR "Couldn't execute ncc\n";
exit 2;

sub fail {
    print STDERR "$_[0]\n";
    exit 2;
}

