# Configuration
$prefix = "@prefix@";
$exec_prefix = "@exec_prefix@";

if ($#ARGV < 1) {
    &fail("Usage: galscc <name of Main component> <options and nesC files>");
}

$main = shift @ARGV;

# FIXME: why doesn't this work with avr-gcc?
unshift @ARGV, "-fgalsc-main=$main";
unshift @ARGV, "$exec_prefix/bin/ncc";

exec @ARGV;
print STDERR "Couldn't execute ncc\n";
exit 2;

sub fail {
    print STDERR "$_[0]\n";
    exit 2;
}

