keep=
if [ -z "$NESC1" ]; then
  NESC1=../../../src/nesc1
  keep=1
fi
cd $1
cfile=/tmp/runnable.$$.c
exe=/tmp/runnable.out.$$
$NESC1 -U__BLOCKS__ -fnesc-separator=__ -fnesc-include=../../../tools/deputy_nodeputy -fnesc-include=../../../tools/nesc_nx -I/usr/lib/ncc test.nc -o $cfile && \
gcc -o $exe $cfile && \
$exe
ok=$?
if [ -z "$keep" ]; then
  rm -f $cfile $exe
else
  echo C file is $cfile, executable is $exe
fi
exit $ok
