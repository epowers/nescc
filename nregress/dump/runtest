rm -rf .output
OUT=/tmp/test.$$.1
ERR=/tmp/test.$$.2
mkdir .output
for i in *.tst; do
  if [ -f $i ]; then
    echo $i
    ./$i >$OUT 2>$ERR
    sed -e 's/0x[0-9a-f]*/HEX/g' $OUT >.output/$i.1 
    sed -e 's/0x[0-9a-f]*/HEX/g' $ERR >.output/$i.2 
  fi
done
echo
diff --recur -u .ok .output
if [ $? = 0 ]; then
  echo All tests passed
fi
rm -f $OUT $ERR
